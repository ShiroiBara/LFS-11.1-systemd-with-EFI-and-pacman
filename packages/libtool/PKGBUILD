pkgname=libtool
pkgver=2.4.6
pkgrel=1
pkgdesc="A generic library support script"
arch=('x86_64')
url="http://www.gnu.org/software/libtool"
source=($pkgname-$pkgver.tar.xz)
md5sums=('SKIP')
license=('GPL')

prepare() {

    cd "$srcdir/$pkgname-$pkgver"

}

build() {

    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr
    make

}

check() {

    cd "$srcdir/$pkgname-$pkgver"

}

package() {

    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR=$pkgdir install

}
