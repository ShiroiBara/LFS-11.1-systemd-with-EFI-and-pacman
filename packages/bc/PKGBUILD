pkgname=bc
pkgver=5.2.2
pkgrel=1
pkgdesc="An arbitrary precision calculator language"
arch=('x86_64')
url="https://www.gnu.org/software/bc/"
source=($pkgname-$pkgver.tar.xz)
md5sums=('SKIP')
license=('GPL')

prepare() {

    cd "$srcdir/$pkgname-$pkgver"

}

build() {

    cd "$srcdir/$pkgname-$pkgver"
    CC=gcc ./configure --prefix=/usr -G -O3
    make
}

check() {

    cd "$srcdir/$pkgname-$pkgver" 
}

package() {

    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR=$pkgdir install
    
}
