pkgname=diffutils
pkgver=3.8
pkgrel=1
pkgdesc="Utility programs used for creating patch files"
arch=('x86_64')
url="https://www.gnu.org/software/diffutils"
source=($pkgname-$pkgver.tar.xz)
md5sums=('SKIP')
license=('GPL3')

prepare() {

    cd "$srcdir/$pkgname-$pkgver"

}

build() {

    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr
    make

}

check() {

    cd "$srcdir/$pkgname-$pkgver"

}

package() {

    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR=$pkgdir install

}
